import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.BorderFactory;
import javax.swing.JApplet;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTextField;





public class tester extends JApplet
{
	private JTextField searchBar;
	private JButton search;
	private JPanel controls;
	
	public void init()
	{
		searchBar=new JTextField();
		search=new JButton("Search");
		controls=new JPanel();
		searchBar.setPreferredSize(new Dimension(100, searchBar.getHeight()));
		
		controls.add(searchBar);
		controls.add(search);
		controls.setBorder(BorderFactory.createLineBorder(Color.BLACK, 3));
		getContentPane().add(controls, BorderLayout.CENTER);
		controls.setVisible(true);
		
	}
	public void start()
	{
		
	}
	public void stop()
	{
		
	}
	public void destory()
	{
		
	}
	public void paint(Graphics g)
	{
		
	}
	
}
